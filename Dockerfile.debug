FROM node:18-slim

WORKDIR /app

# Instalar dependencias b치sicas
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Configurar NODE_OPTIONS para crypto
ENV NODE_OPTIONS="--crypto-global"

# Copiar package files
COPY package*.json ./

# Debug: Ver contenido de package.json
RUN cat package.json

# Debug: Versi칩n de npm y node
RUN npm --version && node --version

# Instalar dependencias con verbose para ver d칩nde falla
RUN npm install --legacy-peer-deps --verbose

# Copiar Prisma
COPY prisma ./prisma/
RUN npx prisma generate

# Copiar c칩digo fuente
COPY src ./src

# Generar Prisma client y construir
RUN npm run build

# Crear directorios necesarios
RUN mkdir -p logs uploads

EXPOSE 3080

CMD ["npm", "run", "start:prod"]